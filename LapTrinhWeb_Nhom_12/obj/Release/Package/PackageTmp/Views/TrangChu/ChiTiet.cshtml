@model LapTrinhWeb_Nhom_12.Models.ChiTietViewModel

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-5">
            <img src="~/Images/@Model.AnhThuoc" class="img-fluid border rounded" alt="@Model.TenThuoc" />
        </div>

        <div class="col-md-7">
            <h2 class="fw-bold">@Model.TenThuoc</h2>
            <p class="text-muted">Danh mục: @Model.TenDanhMuc</p>

            <h3 class="text-danger my-3">
                @Model.GiaBan.ToString("N0") VNĐ / @Model.DonViTinh
            </h3>

            <p>
                <strong>Tình trạng:</strong>
                @if (Model.SoLuongTon > 0)
                {
                    <span class="text-success">Còn hàng (@Model.SoLuongTon sẵn có)</span>
                }
                else
                {
                    <span class="text-danger">Hết hàng</span>
                }
            </p>

            <div class="my-4">
                <p><strong>Mô tả sản phẩm:</strong></p>
                <div class="p-3 bg-light rounded">
                    @Html.Raw(Model.MoTa)
                </div>
            </div>

            <form action="@Url.Action("ThemGioHang", "GioHang")" method="get">
                <input type="hidden" name="id" value="@Model.IdThuoc" />

                <label>Số lượng:</label>
                <input type="number" name="soLuong" value="1" min="1" max="@Model.SoLuongTon" />

                <button type="submit" class="btn btn-success">Thêm ngay</button>
            </form>
        </div>
    </div>
</div>