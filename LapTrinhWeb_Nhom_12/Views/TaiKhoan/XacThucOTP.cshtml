@{
    ViewBag.Title = "Xác thực OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container auth-wrapper">
    <div class="auth-card">
        <h2 class="auth-title">Xác Thực Email</h2>
        <p class="text-center text-muted small mb-4">
            Một mã xác thực 6 số đã được gửi đến email của bạn.<br />
            Vui lòng kiểm tra (cả hộp thư rác) và nhập vào dưới đây.
        </p>

        @using (Html.BeginForm("XacThucOTP", "TaiKhoan", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center py-2 mb-3 small">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                </div>
            }

            <div class="mb-4">
                <input type="text" name="otpInput" class="form-control text-center fw-bold fs-3 letter-spacing-2"
                       placeholder="######" maxlength="6" required autofocus autocomplete="off" />
            </div>

            <button type="submit" class="btn btn-auth shadow-sm">
                XÁC NHẬN
            </button>

            <div class="text-center mt-3">
                <a href="@Url.Action("DangKy")" class="text-decoration-none small text-muted">
                    <i class="bi bi-arrow-left"></i> Quay lại đăng ký
                </a>
            </div>
        }
    </div>
</div>

<style>
    .letter-spacing-2 {
        letter-spacing: 5px;
    }
</style>