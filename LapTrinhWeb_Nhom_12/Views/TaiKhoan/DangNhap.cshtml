@model LapTrinhWeb_Nhom_12.Models.DangNhapViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* --- Style cho trang Auth (Đăng nhập/Đăng ký) --- */
    body {
        background-color: #F0F2F5; /* Màu nền xám nhạt làm nổi bật khung trắng */
    }

    .auth-wrapper {
        min-height: 80vh; /* Căn giữa màn hình theo chiều dọc */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .auth-card {
        background: #ffffff;
        width: 100%;
        max-width: 450px; /* Độ rộng tối đa giống ảnh */
        padding: 40px;
        border-radius: 12px; /* Bo góc khung */
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05); /* Đổ bóng nhẹ */
        position: relative;
    }

    .auth-title {
        color: #1A3A6B; /* Màu xanh đậm thương hiệu */
        font-weight: 700;
        font-size: 28px;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Style cho input */
    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px; /* Bo góc input */
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        background-color: #fff;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: #1A3A6B;
            box-shadow: 0 0 0 0.2rem rgba(26, 58, 107, 0.15);
        }

    /* Style cho nút bấm */
    .btn-auth {
        background-color: #1A3A6B;
        color: white;
        border-radius: 50px; /* Bo tròn kiểu viên thuốc */
        padding: 12px;
        font-weight: 600;
        font-size: 16px;
        width: 100%;
        margin-top: 20px;
        border: none;
        transition: all 0.3s;
    }

        .btn-auth:hover {
            background-color: #132b50;
            color: #fff;
            transform: translateY(-1px);
        }

    /* Đường kẻ 'Hoặc' */
    .separator {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 25px 0;
        color: #6c757d;
        font-size: 14px;
    }

        .separator::before,
        .separator::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }

        .separator::before {
            margin-right: .5em;
        }

        .separator::after {
            margin-left: .5em;
        }

    /* Link chuyển đổi */
    .auth-footer {
        text-align: center;
        font-size: 14px;
        color: #333;
    }

        .auth-footer a {
            color: #0d6efd; /* Màu xanh link giống ảnh */
            text-decoration: none;
            font-weight: 500;
        }

            .auth-footer a:hover {
                text-decoration: underline;
            }

    /* Nút back mũi tên */
    .btn-back {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 24px;
        color: #333;
        text-decoration: none;
    }

        .btn-back:hover {
            color: #1A3A6B;
        }
</style>


<div class="container auth-wrapper">
    <div class="auth-card">

        <h2 class="auth-title">Đăng Nhập</h2>

        @using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center py-2 mb-3 small">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                </div>
            }

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small" })
            </div>

            <div class="mb-1">
                <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger small" })
            </div>

            <div class="text-end mb-3">
                <a href="#" class="small text-muted text-decoration-none">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-auth shadow-sm">
                Đăng Nhập
            </button>
        }

        <div class="separator">Hoặc</div>

        <div class="auth-footer">
            Chưa có tài khoản? <a href="@Url.Action("DangKy", "TaiKhoan")">Đăng kí ngay</a>
        </div>
    </div>
</div>