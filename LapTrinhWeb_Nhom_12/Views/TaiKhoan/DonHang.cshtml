@model List<LapTrinhWeb_Nhom_12.Models.LichSuHoaDonViewModel>

@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h4 class="mb-4 fw-bold text-primary"><i class="bi bi-bag-check"></i> Đơn hàng của tôi</h4>

            @if (Model.Count == 0)
            {
                <div class="text-center py-5 bg-light rounded">
                    <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
                    <a href="@Url.Action("TrangChu", "TrangChu")" class="btn btn-primary">Mua sắm ngay</a>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã ĐH</th>
                                    <th>Ngày đặt</th>
                                    <th>Địa chỉ nhận</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="fw-bold">#@item.IdHoaDon</span></td>
                                        <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td style="max-width: 250px;" class="text-truncate" title="@item.DiaChiNhan">
                                            @item.DiaChiNhan
                                        </td>
                                        <td class="fw-bold text-danger">@item.TongTien.ToString("N0") đ</td>
                                        <td class="text-end">
                                            <a href="@Url.Action("ChiTietDonHang", "TaiKhoan", new { id = item.IdHoaDon })"
                                               class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                Chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>