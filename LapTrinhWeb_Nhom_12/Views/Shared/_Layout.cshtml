<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - MedFor All</title>

    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/bootstrap.min.css")" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="@Url.Content("~/Content/Style.css")" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        /*----------- Begin Footer ----------- */
        /* Thiết lập cơ bản */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
        }

        /* Style cho Footer */
        .footer-section {
            background-color: #15325E; /* Màu xanh đậm nền chủ đạo */
            color: #fff;
            position: relative;
            padding-top: 60px;
            padding-bottom: 20px;
            overflow: hidden; /* Để cắt phần họa tiết thừa */
        }

        /* Tạo container để căn giữa nội dung */
        .container {
            width: 85%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* --- Phần Họa tiết nền (Hexagon) bên trái --- */
        /* Lưu ý: Để giống hệt ảnh, bạn cần một file ảnh .png nền trong suốt hình lục giác.
        Ở đây tôi dùng gradient CSS để mô phỏng hiệu ứng mờ ảo bên trái */
        .bg-pattern {
            position: absolute;
            top: 0;
            left: -50px;
            width: 400px;
            height: 100%;
            /* Nếu bạn có ảnh hexagon.png, hãy dùng dòng dưới: */
            /* background-image: url('path/to/hexagon.png'); */
            /* Mô phỏng tạm thời bằng gradient đốm sáng mờ */
            background: radial-gradient(circle at center, rgba(255,255,255,0.05) 0%, transparent 70%);
            opacity: 0.5;
            z-index: 0;
            pointer-events: none;
        }

        /* --- Phần Logo Trung tâm --- */
        .footer-content {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin-bottom: 40px;
            position: relative;
            z-index: 1; /* Để nội dung nổi lên trên họa tiết nền */
        }

        .logo-area {
            text-align: center;
        }

        /* Icon */
        .logo-icon {
            font-size: 40px;
            color: #2AB7A9; /* Màu xanh ngọc của icon */
            margin-bottom: 5px;
            position: relative;
            display: inline-block;
        }

            .logo-icon .plus-sign {
                position: absolute;
                top: -10px;
                right: -10px;
                font-size: 20px;
                color: #2AB7A9;
            }

        /* Chữ MedFor All */
        .brand-name {
            font-size: 36px;
            font-weight: 700;
            line-height: 1;
            color: #102343; /* Màu xanh tối của chữ "Med" (hơi chìm vào nền) */
            text-shadow: 1px 1px 2px rgba(255,255,255,0.1); /* Tạo bóng nhẹ để dễ đọc hơn trên nền tối */
        }

            /* Màu xanh sáng cho chữ "For All" */
            .brand-name .highlight {
                color: #4DD0C3; /* Màu xanh ngọc sáng */
            }

        /* Dòng chữ Online Pharmacy */
        .sub-text {
            color: #5d7ea6;
            font-size: 14px;
            margin-top: 5px;
            letter-spacing: 1px;
        }

        /* --- Đường kẻ ngang --- */
        .footer-line {
            width: 100%;
            height: 1px;
            background-color: rgba(255, 255, 255, 0.2); /* Màu trắng mờ */
            margin-bottom: 20px;
        }

        /* --- Phần Copyright --- */
        .footer-bottom p {
            font-size: 14px;
            color: #aabdd6; /* Màu chữ xám xanh nhạt */
            text-align: left; /* Căn trái theo yêu cầu */
        }
        /*----------- End Footer ----------- */

    </style>
    <style>
        /* Khi nav-link có class active thì đổi nền xám và bo góc */
        .navbar-nav .nav-link.active {
            background-color: #6c757d; /* Màu xám (bạn có thể chỉnh mã màu tùy ý) */
            color: #fff !important; /* Chữ màu trắng để nổi bật */
            border-radius: 5px; /* Bo góc nhẹ cho đẹp */
            font-weight: 500;
        }

        /* Hiệu ứng khi di chuột vào cũng hơi xám nhẹ */
        .navbar-nav .nav-link:hover {
            background-color: rgba(108, 117, 125, 0.5);
            border-radius: 5px;
        }
    </style>
    @RenderSection("Styles", required: false)
    @{
        // Lấy giá trị id từ URL hiện tại (ví dụ: ?id=1)
        var currentId = Request.QueryString["id"];

        // (Tùy chọn) Nếu không có id, mặc định chọn Thuốc (id=0) hoặc để trống
        if (string.IsNullOrEmpty(currentId)) { currentId = "-1"; }
    }
</head>
<body>
    <div class="top-bar-promo"></div>

    <header class="header-top-bar">
        <div class="inner-container d-flex justify-content-between align-items-center py-2 px-4 px-lg-5">

            <a class="navbar-brand" href="@Url.Action("TrangChu", "TrangChu")">
                <img src="@Url.Content("~/Images/logo.png")" alt="MedFor All" class="site-logo">
            </a>

            <form class="header-search-form mx-4 w-100" action="@Url.Action("Search", "Home")" method="get" style="max-width: 500px;">
                <div class="input-group">
                    <button class="btn btn-search-icon" type="submit"><i class="bi bi-search"></i></button>
                    <input type="text" name="query" class="form-control" placeholder="Tìm kiếm sản phẩm" aria-label="Tìm kiếm sản phẩm">
                </div>
            </form>

            @if (Session["User"] != null)
            {
                <div class="dropdown me-4">
                    <a href="#" class="user-action-link text-decoration-none dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person"></i>
                        <span class="d-none d-md-inline fw-bold">@Session["TenDangNhap"]</span>
                    </a>

                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("ThongTin", "TaiKhoan")">Thông tin tài khoản</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DonHang", "TaiKhoan")">Đơn hàng của tôi</a></li>
                        @if ((string)Session["TenDangNhap"] == "admin")
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "ThuocAdmin")">Quản lý thuốc</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="@Url.Action("DangXuat", "TaiKhoan")">Đăng xuất</a></li>
                    </ul>
                </div>
                <a href="@Url.Action("XemGioHang", "GioHang")" class="btn btn-cart">
                    <i class="bi bi-cart"></i>
                    <span class="d-none d-md-inline">GIỎ HÀNG</span>
                </a>
            }
            else
            {
                <div class="header-user-actions d-flex align-items-center">
                    <a href="@Url.Action("DangKy", "TaiKhoan")" class="user-action-link me-4">
                        <i class="bi bi-person"></i>
                        <span class="d-none d-md-inline">ĐĂNG KÝ</span>
                    </a>
                    <a href="@Url.Action("DangNhap", "TaiKhoan")" class="user-action-link me-4">
                        <i class="bi bi-person"></i>
                        <span class="d-none d-md-inline">ĐĂNG NHẬP</span>
                    </a>
                    <a href="@Url.Action("XemGioHang", "GioHang")" class="btn btn-cart">
                        <i class="bi bi-cart"></i>
                        <span class="d-none d-md-inline">GIỎ HÀNG</span>
                    </a>
                </div>
            }
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-main">
        <div class="inner-container px-4 px-lg-5 d-flex align-items-center" style="min-height: 50px;">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                <ul class="navbar-nav mb-2 mb-lg-0">

                    <li class="nav-item mx-3">
                        <a class="nav-link @(currentId == "0" ? "active" : "")"
                           href="@Url.Action("DanhSachThuoc", "DanhSach", new { id = 0 })">
                            Thuốc
                        </a>
                    </li>

                    <li class="nav-item mx-3">
                        <a class="nav-link @(currentId == "1" ? "active" : "")"
                           href="@Url.Action("DanhSachThuoc", "DanhSach", new { id = 1 })">
                            Thực Phẩm Chức Năng
                        </a>
                    </li>

                    <li class="nav-item mx-3">
                        <a class="nav-link @(currentId == "2" ? "active" : "")"
                           href="@Url.Action("DanhSachThuoc", "DanhSach", new { id = 2 })">
                            Mỹ Phẩm
                        </a>
                    </li>

                    <li class="nav-item mx-3">
                        <a class="nav-link @(currentId == "3" ? "active" : "")"
                           href="@Url.Action("DanhSachThuoc", "DanhSach", new { id = 3 })">
                            Đông Y - Thảo Dược
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    @*--------------------------------- BEGIN BREAD CRUMPS ---------------------------------*@
    @if (ViewBag.CurrentPage != null)
    {
        <nav class="flex w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 mt-4" aria-label="Breadcrumb">

            @* Home luôn cố định *@
            <a href="@Url.Action("TrangChu", "TrangChu")" class="hover:text-[#1A3A6B] transition-colors no-underline">
                Trang chủ
            </a>
            <span class="mx-2 text-gray-400">/</span>
            @* Level 1 (Nếu có) *@
            @if (ViewBag.BreadcrumbLevel1 != null)
            {
                <span class="font-bold text-[#1A3A6B]">
                    <i class="bi bi-chevron-right text-gray-400 text-xs mx-1"></i>
                    <a href="@ViewBag.BreadcrumbLevel1Url" class="ms-1 text-sm font-medium text-gray-500 hover:text-[#1A3A6B] md:ms-2 no-underline">
                        @ViewBag.BreadcrumbLevel1
                    </a>
                </span>
            }
            @* Trang hiện tại *@
            <span class="ms-1 text-sm font-bold text-[#1A3A6B] md:ms-2"> @ViewBag.CurrentPage </span>
        </nav>
    }
    @*--------------------------------- END BREAD CRUMPS ---------------------------------*@

    <div class="container body-content" style="margin-top: 10px; margin-bottom:100px">
        @RenderBody()
    </div>

    <footer class="footer-section">
        <div class="bg-pattern"></div>

        <div class="container">
            <div class="footer-content">
                <div class="logo-area">
                    <div class="logo-icon">
                        <i class="fas fa-user-nurse"></i>
                        <span class="plus-sign">+</span>
                    </div>
                    <h2 class="brand-name">Med<span class="highlight">For All</span></h2>
                    <p class="sub-text">Online Pharmacy</p>
                </div>
            </div>
        </div>

        <div class="footer-line"></div>

        <div class="container">
            <div class="footer-bottom">
                <p>&copy; 2025 MedForAll. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>

