@*AJAX xử lý giỏ hàng*@
<script>
    $(document).ready(function () {

        // 1. Hàm load Mini Cart (Load lại nội dung popup)
        function loadMiniCart() {
            $.get('/GioHang/GetMiniCart', function (data) {
                $('#miniCartContainer').html(data);
            });
        }

        // 2. Sự kiện Hover vào icon giỏ hàng
        // Dùng .off().hover() để tránh gán sự kiện nhiều lần nếu script chạy lại
        $('.cart-wrapper').off('mouseenter mouseleave').hover(function () {
            loadMiniCart();
        });

        window.addToCart = function (idThuoc) {
            $.ajax({
                url: '/GioHang/ThemGioHangAjax',
                type: 'POST',
                data: { id: idThuoc },
                success: function (res) {
                    console.log("Kết quả thêm giỏ:", res);

                    if (res.success) {
                        $('#cart-badge').text(res.totalQty);

                        loadMiniCart();

                        $('.mini-cart-popup').stop(true, true).fadeIn(200).delay(2000).fadeOut(300, function () {
                            $(this).css('display', ''); 
                            $(this).removeAttr('style'); 
                        });

                        $('.mini-cart-popup').on('mouseenter', function () {
                            $(this).stop(true, true).show().css('opacity', 1);
                        });

                        $('.mini-cart-popup').on('mouseleave', function () {
                            $(this).css('display', ''); // Xóa style inline để CSS :hover hoạt động lại bình thường
                        });
                    }
                },
                error: function () {
                    alert("Lỗi hệ thống khi thêm giỏ hàng.");
                }
            });
        };

        // 4. Hàm xóa từ Mini Cart
        window.removeFromMiniCart = function (idThuoc) {
            $.post('/GioHang/XoaKhoiMiniCart', { id: idThuoc }, function (res) {
                if (res.success) {
                    loadMiniCart();

                    if (res.totalQty !== undefined) {
                        $('#cart-badge').text(res.totalQty);
                    } else {
                        location.reload();
                    }
                }
            });
        }
    });
</script>