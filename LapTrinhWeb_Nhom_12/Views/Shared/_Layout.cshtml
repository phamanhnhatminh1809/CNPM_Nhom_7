<style>
    .cart-wrapper {
        position: relative;
        cursor: pointer;
    }

    .mini-cart-popup {
        position: absolute;
        top: 100%;
        right: 0;
        width: 320px; /* Độ rộng giống ảnh */
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
        z-index: 1000;
        display: none; /* Mặc định ẩn */
        margin-top: 15px; /* Cách icon một chút */
        border: 1px solid #f0f0f0;
    }

    .mini-cart-popup::before {
        content: "";
        position: absolute;
        top: -8px;
        right: 20px; /* Căn chỉnh cho thẳng icon giỏ hàng */
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-bottom: 8px solid #fff; /* Màu mũi tên trùng màu nền */
        filter: drop-shadow(0 -1px 1px rgba(0,0,0,0.05));
    }

    .cart-wrapper:hover .mini-cart-popup {
        display: block;
        animation: fadeIn 0.2s ease-in-out;
    }
    .mini-cart-popup::after {
        content: "";
        position: absolute;
        top: -20px; 
        left: 0;
        width: 100%;
        height: 20px; 
        background: transparent; 
        display: block;
        z-index: -1; 

    .custom-scrollbar::-webkit-scrollbar { width: 6px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #ccc; border-radius: 3px; }
</style>
