                                               onclick="confirmDelete('@Url.Action("XoaGioHang", "GioHang", new { id = item.IdThuoc })')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
