    <script>
        // Hàm xử lý tăng giảm số lượng
        function updateQuantity(idThuoc, change) {
            var inputElement = document.getElementById('qty-' + idThuoc);
            var currentQty = parseInt(inputElement.value);
            var newQty = currentQty + change;

            // Không cho phép số lượng < 1
            if (newQty < 1) return;

            // Cập nhật giao diện ngay lập tức (cho mượt)
            inputElement.value = newQty;

            // Gửi AJAX lên server để cập nhật giỏ hàng thật
            fetch('/GioHang/CapNhatSoLuongAjax', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ id: idThuoc, soLuong: newQty })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // 1. Cập nhật Thành tiền của dòng đó
                        var itemTotalElement = document.getElementById('total-price-' + idThuoc);
                        if (itemTotalElement) {
                            itemTotalElement.innerText = data.itemTotal;
                        }

                        // 2. Cập nhật Tổng tiền cả giỏ hàng (Bạn cần thêm id="cart-total" vào chỗ hiển thị tổng tiền ở cột bên phải)
                        var cartTotalElements = document.querySelectorAll('.cart-total-display');
                        cartTotalElements.forEach(el => el.innerText = data.cartTotal);
                    } else {
                        alert(data.message);
                        // Nếu lỗi (ví dụ hết hàng), trả lại số lượng cũ
                        inputElement.value = currentQty;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    inputElement.value = currentQty;
                });
        }
    </script>
