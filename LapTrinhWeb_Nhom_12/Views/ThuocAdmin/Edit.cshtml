@model LapTrinhWeb_Nhom_12.Models.THUOC

@{
    ViewBag.Title = "Chỉnh sửa thuốc";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary"><i class="bi bi-pencil-square"></i> Cập nhật thuốc</h3>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    @using (Html.BeginForm("Edit", "ThuocAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id_thuoc)
        @* Giữ lại tên ảnh cũ để nếu không chọn ảnh mới thì không bị mất *@
        @Html.HiddenFor(model => model.anh_thuoc)

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Thông tin chung</h5>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label fw-bold">Tên thuốc <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.ten_thuoc, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập tên thuốc..." } })
                                @Html.ValidationMessageFor(model => model.ten_thuoc, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Danh mục</label>
                                @Html.DropDownList("id_danh_muc", (IEnumerable<SelectListItem>)ViewBag.IdDanhMuc, "--- Chọn danh mục ---", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.id_danh_muc, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Loại thuốc</label>
                                @Html.DropDownList("id_loai_thuoc", (IEnumerable<SelectListItem>)ViewBag.IdLoaiThuoc, "--- Chọn loại thuốc ---", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.id_loai_thuoc, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Thương hiệu / Hãng</label>
                                @Html.EditorFor(model => model.hang, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Hoạt chất chính</label>
                                @Html.EditorFor(model => model.hoat_chat, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Đơn vị tính</label>
                                @Html.EditorFor(model => model.don_vi_tinh, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Dạng bào chế</label>
                                @Html.EditorFor(model => model.dang_bao_che, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Hàm lượng</label>
                                @Html.EditorFor(model => model.ham_luong, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Công dụng</label>
                            @Html.TextAreaFor(model => model.cong_dung, new { @class = "form-control", rows = "3" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Liều dùng & Cách dùng</label>
                            @Html.TextAreaFor(model => model.lieu_dung, new { @class = "form-control", rows = "3" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-danger">Chống chỉ định</label>
                            @Html.TextAreaFor(model => model.chong_chi_dinh, new { @class = "form-control", rows = "2" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Giá bán</h5>
                    </div>
                    <div class="card-body">
                        <label class="form-label fw-bold">Giá bán (VNĐ)</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.gia_ban, new { htmlAttributes = new { @class = "form-control fw-bold text-primary", type = "number" } })
                            <span class="input-group-text">₫</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.gia_ban, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Hình ảnh sản phẩm</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-3 p-2 border rounded bg-light" style="min-height: 200px; display: flex; align-items: center; justify-content: center;">
                            <img id="previewImage"
                                 src="@Url.Content("~/Images/AnhThuoc/" + (Model.anh_thuoc ?? "default.png"))"
                                 alt="Ảnh thuốc"
                                 class="img-fluid"
                                 style="max-height: 250px; max-width: 100%; object-fit: contain;"
                                 onerror="this.src='https://via.placeholder.com/300?text=No+Image'" />
                        </div>

                        <div class="mb-3">
                            <label for="uploadAnh" class="form-label text-start w-100 fw-bold">Chọn ảnh mới</label>
                            <input type="file" name="uploadAnh" id="uploadAnh" class="form-control" accept="image/*" onchange="previewFile(this);" />
                            <small class="text-muted d-block mt-1 text-start">Định dạng: .jpg, .png, .jpeg</small>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold text-uppercase shadow-sm">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Hàm xem trước ảnh khi chọn file
        function previewFile(input) {
            var preview = document.getElementById('previewImage');
            var file = input.files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                // Nếu không chọn file thì trả về ảnh cũ (nếu muốn logic phức tạp hơn)
                // Hoặc giữ nguyên ảnh hiện tại
            }
        }
    </script>
}