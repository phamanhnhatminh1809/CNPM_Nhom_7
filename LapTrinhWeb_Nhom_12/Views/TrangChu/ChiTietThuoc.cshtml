@using LapTrinhWeb_Nhom_12.Models;
@model ChiTietThuocViewModel

@{
    ViewBag.Title = Model.TenThuoc;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    /* CSS Tùy chỉnh để giống ảnh mẫu */
    .product-detail-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    /* Phần giá tiền */
    .price-tag {
        color: #0d6efd; /* Màu xanh dương đậm giống ảnh */
        font-size: 32px;
        font-weight: 700;
        line-height: 1.2;
    }

    .price-unit {
        font-size: 18px;
        color: #666;
        font-weight: normal;
    }

    /* Bảng thông số kỹ thuật (Danh mục, dạng bào chế...) */
    .specs-table {
        width: 100%;
        margin-top: 20px;
    }

        .specs-table td {
            padding: 8px 0;
            vertical-align: top;
        }

    .specs-label {
        width: 140px;
        color: #666;
        font-weight: 500;
    }

    .specs-value {
        color: #111;
        font-weight: 500;
    }

    .specs-link {
        color: #0d6efd;
        text-decoration: none;
    }

    /* Nút chọn số lượng hình viên thuốc */
    .quantity-pill-group {
        display: inline-flex;
        border: 1px solid #ced4da;
        border-radius: 50px; /* Bo tròn như viên thuốc */
        overflow: hidden;
        width: 120px;
        height: 40px;
        align-items: center;
        margin-left: 10px;
    }

    .btn-qty {
        background: #fff;
        border: none;
        width: 35px;
        height: 100%;
        font-size: 20px;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

        .btn-qty:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }

    .input-qty {
        width: 50px;
        text-align: center;
        border: none;
        outline: none;
        font-weight: 600;
        font-size: 16px;
        /* Xóa mũi tên input number */
        -moz-appearance: textfield;
    }

        .input-qty::-webkit-outer-spin-button,
        .input-qty::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Nút Mua Hàng */
    .btn-buy-now {
        background-color: #1d48ba; /* Xanh đậm hơn chút */
        color: white;
        font-weight: 700;
        border-radius: 8px;
        padding: 12px 40px;
        border: none;
        transition: all 0.2s;
        width: 100%;
        max-width: 250px;
    }

        .btn-buy-now:hover {
            background-color: #15358a;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    /* Footer Icon dịch vụ */
    .service-icons {
        margin-top: 20px;
        border-top: 1px solid #eee;
        padding-top: 15px;
        display: flex;
        gap: 20px;
        font-size: 13px;
        color: #555;
    }

    .service-item i {
        color: #1d48ba;
        margin-right: 5px;
        font-size: 16px;
    }
    /* Style cho khung chứa Tab bên trái */
    .drug-nav-pills .nav-link {
        color: #6c757d; /* Màu chữ xám khi chưa chọn */
        text-align: left; /* Canh lề trái */
        padding: 15px 20px; /* Khoảng cách rộng rãi */
        border-bottom: 1px solid #f0f0f0; /* Đường kẻ mờ ngăn cách */
        border-radius: 8px; /* Bo góc nhẹ */
        margin-bottom: 5px;
        font-weight: 500;
        transition: all 0.2s;
    }

        /* Hiệu ứng khi Hover */
        .drug-nav-pills .nav-link:hover {
            background-color: #f8f9fa;
            color: #1A3A6B;
        }

        /* Style cho Tab ĐANG ĐƯỢC CHỌN (Active) - Giống ảnh mẫu */
        .drug-nav-pills .nav-link.active {
            background-color: #eff2f5 !important; /* Màu nền xám nhạt */
            color: #1A3A6B !important; /* Màu chữ xanh đậm */
            font-weight: 700; /* Chữ đậm */
            border: none;
        }

    /* Nội dung bên phải */
    .tab-content-title {
        font-size: 1.25rem; /* ~20px */
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
    }

    .tab-pane-content {
        color: #444;
        line-height: 1.6;
        font-size: 0.95rem;
    }
</style>

<div class="container py-5 product-detail-container bg-light">
    <div class="row">
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm p-3">
                <div class="text-center mb-3">
                    <img src="~/Images/AnhThuoc/@Model.AnhThuoc" alt="@Model.TenThuoc" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
                </div>
                <div class="d-flex justify-content-center gap-2">
                    <img src="~/Images/AnhThuoc/@Model.AnhThuoc" class="border rounded p-1" width="60" height="60" style="object-fit: contain; cursor: pointer; border-color: #0d6efd !important;">
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="mb-2">
                <span class="text-secondary">Thương hiệu: </span>
                <a href="#" class="text-decoration-none fw-bold" style="color: #1d48ba;">@Model.Hang</a>
            </div>

            <h2 class="fw-bold mb-3">@Model.TenThuoc</h2>

            <div class="mb-4">
                <span class="price-tag">@Model.GiaBan.ToString("#,##0")đ</span>
                <span class="price-unit"> / @Model.DonViTinh</span>
            </div>

            <table class="specs-table">
                <tr>
                    <td class="specs-label">Danh mục</td>
                    <td class="specs-value">
                        <a href="#" class="specs-link">@Model.TenDanhMuc</a>
                    </td>
                </tr>
                <tr>
                    <td class="specs-label">Dạng bào chế</td>
                    <td class="specs-value">@Model.DangBaoChe</td>
                </tr>
                <tr>
                    <td class="specs-label">Hoạt chất</td>
                    <td class="specs-value">@Model.HoatChat</td>
                </tr>
                <tr>
                    <td class="specs-label">Hãng sản xuất</td>
                    <td class="specs-value">@Model.Hang</td>
                </tr>
                <tr>
                    <td class="specs-label">Hạn sử dụng</td>
                    <td class="specs-value">@Model.HanSuDungThang tháng</td>
                </tr>
            </table>

            <hr class="my-4 text-muted" />

            <form action="@Url.Action("ThemGioHang", "GioHang")" method="post">
                <input type="hidden" name="id" value="@Model.IdThuoc" />

                <div class="d-flex align-items-center mb-4">
                    <span class="fw-bold me-3">Chọn số lượng</span>

                    <div class="quantity-pill-group">
                        <button type="button" class="btn-qty" onclick="updateQty(-1)">-</button>
                        <input type="number" name="soLuong" id="inputQty" value="1" min="1" class="input-qty" readonly>
                        <button type="button" class="btn-qty" onclick="updateQty(1)">+</button>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn-buy-now">
                        Chọn mua
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-3 mb-4">
            <div class="nav flex-column nav-pills drug-nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                <button class="nav-link active" id="v-pills-info-tab" data-bs-toggle="pill" data-bs-target="#v-pills-info" type="button" role="tab" aria-controls="v-pills-info" aria-selected="true">
                    Thông tin chi tiết
                </button>

                <button class="nav-link" id="v-pills-thanhphan-tab" data-bs-toggle="pill" data-bs-target="#v-pills-thanhphan" type="button" role="tab" aria-controls="v-pills-thanhphan" aria-selected="false">
                    Thành phần
                </button>

            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content bg-white p-4 rounded shadow-sm border border-light" id="v-pills-tabContent">

                <div class="tab-pane fade show active" id="v-pills-info" role="tabpanel" aria-labelledby="v-pills-info-tab">

                    <div class="mb-4">
                        <h4 class="fw-bold text-dark mb-3">1. Công dụng</h4>
                        <div class="text-secondary ps-3" style="line-height: 1.6;">
                            @if (!string.IsNullOrEmpty(Model.CongDung))
                            {
                                @Html.Raw(Model.CongDung.Replace("\n", "<br>"))
                            }
                            else
                            { <span>Đang cập nhật...</span>}
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25"> <div class="mb-4">
                        <h4 class="fw-bold text-dark mb-3">2. Liều dùng & Cách dùng</h4>
                        <div class="text-secondary ps-3" style="line-height: 1.6;">
                            @if (!string.IsNullOrEmpty(Model.LieuDung))
                            {
                                @Html.Raw(Model.LieuDung.Replace("\n", "<br>"))
                            }
                            else
                            { <span>Đang cập nhật...</span>}
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25">

                    <div class="mb-2">
                        <h4 class="fw-bold text-dark mb-3">3. Chống chỉ định</h4>
                        <div class="text-danger ps-3 fw-medium">
                            @if (!string.IsNullOrEmpty(Model.ChongChiDinh))
                            {
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @Html.Raw(Model.ChongChiDinh.Replace("\n", "<br>"))
                            }
                            else
                            { <span class="text-secondary fw-normal">Không có thông tin đặc biệt.</span>}
                        </div>
                    </div>

                </div>

                <div class="tab-pane fade" id="v-pills-thanhphan" role="tabpanel" aria-labelledby="v-pills-thanhphan-tab">
                    <h4 class="fw-bold text-dark mb-3">Thành phần thuốc</h4>
                    <div class="text-secondary">
                        <p>Thông tin thành phần đang được cập nhật...</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script đơn giản xử lý tăng giảm số lượng
        function updateQty(change) {
            var input = document.getElementById('inputQty');
            var currentVal = parseInt(input.value);
            var newVal = currentVal + change;

            if (newVal >= 1) {
                input.value = newVal;
            }
        }
    </script>
}