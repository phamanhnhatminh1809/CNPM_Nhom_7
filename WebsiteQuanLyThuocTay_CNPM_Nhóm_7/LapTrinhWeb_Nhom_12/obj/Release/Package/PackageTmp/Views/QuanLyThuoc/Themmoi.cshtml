@model LapTrinhWeb_Nhom_12.Models.THUOC

@{
    ViewBag.Title = "Thêm thuốc mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2>Thêm thuốc mới</h2>

    @using (Html.BeginForm("Themmoi", "QuanLyThuoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                <label class="control-label col-md-2">Tên thuốc</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ten_thuoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ten_thuoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label col-md-2">Danh mục</label>
                <div class="col-md-10">
                    @Html.DropDownList("id_danh_muc", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label col-md-2">Giá bán</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.gia_ban, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label col-md-2">Hình ảnh</label>
                <div class="col-md-10">
                    <input type="file" name="fileAnh" class="form-control" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label col-md-2">Mô tả</label>
                <div class="col-md-10">
                    <textarea name="mo_ta" class="form-control" rows="5"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    }
</div>