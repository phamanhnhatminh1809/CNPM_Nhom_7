@model LapTrinhWeb_Nhom_12.Models.DANH_MUC_THUOC

@{
    ViewBag.Title = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; /* Nhớ thay bằng Layout Admin của bạn */
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0 fw-bold"><i class="bi bi-folder-plus"></i> Thêm danh mục thuốc</h5>
    </div>
    <div class="card-body p-4">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-8 mx-auto">
                    @* Thông báo lỗi nếu có *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên danh mục <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.ten_danh_muc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ví dụ: Thuốc giảm đau, Vitamin..." } })
                        @Html.ValidationMessageFor(model => model.ten_danh_muc, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Mô tả</label>
                        @Html.TextAreaFor(model => model.mo_ta, new { @class = "form-control", @rows = "4", @placeholder = "Mô tả chi tiết danh mục..." })
                        @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu danh mục</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>