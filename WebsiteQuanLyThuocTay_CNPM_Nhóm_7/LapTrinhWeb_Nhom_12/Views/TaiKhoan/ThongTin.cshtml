@model LapTrinhWeb_Nhom_12.Models.TAI_KHOAN

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-person-badge"></i> Hồ sơ cá nhân</h4>
                </div>
                <div class="card-body p-4">

                    @using (Html.BeginForm("ThongTin", "TaiKhoan", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        // Thông báo thành công / thất bại
                        if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success"><i class="bi bi-check-circle"></i> @ViewBag.Success</div>
                        }
                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> @ViewBag.Error</div>
                        }

                        <div class="row">
                            <div class="col-md-4 text-center mb-4">
                                <img src="https://ui-avatars.com/api/?name=@Model.ho_ten&background=0D8ABC&color=fff&size=128"
                                     class="rounded-circle mb-3 shadow-sm" alt="Avatar">
                                <h5 class="fw-bold">@Model.ten_dang_nhap</h5>
                                <span class="badge bg-secondary">@Session["TenQuyen"]</span>
                                <div class="mt-3 text-muted small">
                                    Ngày tham gia: @(Model.id_tai_khoan) <br /> (ID Hệ thống)
                                </div>
                            </div>

                            <div class="col-md-8">
                                <h6 class="text-uppercase text-muted mb-3 fw-bold small">Thông tin chi tiết</h6>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                                    @Html.EditorFor(m => m.ho_ten, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email</label>
                                    @Html.EditorFor(m => m.email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Số điện thoại</label>
                                    @Html.EditorFor(m => m.so_dien_thoai, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-bold">Địa chỉ giao hàng</label>
                                    @Html.TextAreaFor(m => m.dia_chi, new { @class = "form-control", @rows = "3" })
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn btn-primary fw-bold px-4">
                                        <i class="bi bi-save"></i> Cập nhật
                                    </button>
                                    <a href="@Url.Action("TrangChu", "TrangChu")" class="text-decoration-none text-muted">
                                        Quay lại trang chủ
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>