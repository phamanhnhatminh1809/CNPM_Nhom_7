<div class="container py-5 product-detail-container bg-light">
    <div class="row">
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm p-3">
                <div class="text-center mb-3">
                    <img src="~/Images/AnhThuoc/@Model.AnhThuoc" alt="@Model.TenThuoc" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
                </div>
                <div class="d-flex justify-content-center gap-2">
                    <img src="~/Images/AnhThuoc/@Model.AnhThuoc" class="border rounded p-1" width="60" height="60" style="object-fit: contain; cursor: pointer; border-color: #0d6efd !important;">
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="mb-2">
                <span class="text-secondary">Thương hiệu: </span>
                <a href="#" class="text-decoration-none fw-bold" style="color: #1d48ba;">@Model.Hang</a>
            </div>

            <h2 class="fw-bold mb-3">@Model.TenThuoc</h2>

            <div class="mb-4">
                <span class="price-tag">@Model.GiaBan.ToString("#,##0")đ</span>
                <span class="price-unit"> / @Model.DonViTinh</span>
            </div>

            <table class="specs-table">
                <tr>
                    <td class="specs-label">Danh mục</td>
                    <td class="specs-value">
                        <a href="#" class="specs-link">@Model.TenDanhMuc</a>
                    </td>
                </tr>
                <tr>
                    <td class="specs-label">Dạng bào chế</td>
                    <td class="specs-value">@Model.DangBaoChe</td>
                </tr>
                <tr>
                    <td class="specs-label">Hoạt chất</td>
                    <td class="specs-value">@Model.HoatChat</td>
                </tr>
                <tr>
                    <td class="specs-label">Hãng sản xuất</td>
                    <td class="specs-value">@Model.Hang</td>
                </tr>
                <tr>
                    <td class="specs-label">Hạn sử dụng</td>
                    <td class="specs-value">@Model.HanSuDungThang tháng</td>
                </tr>
            </table>

            <hr class="my-4 text-muted" />

            <form action="@Url.Action("ThemGioHang", "GioHang")" method="post">
                <input type="hidden" name="id" value="@Model.IdThuoc" />

                <div class="d-flex align-items-center mb-4">
                    <span class="fw-bold me-3">Chọn số lượng</span>

                    <div class="quantity-pill-group bg-white">
                        <button type="button" class="btn-qty" onclick="updateQty(-1)">-</button>
                        <input type="number" name="soLuong" id="inputQty" value="1" min="1" class="input-qty" readonly>
                        <button type="button" class="btn-qty" onclick="updateQty(1)">+</button>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    @if (Model.SoLuongTon <= 0)
                    {
                        <button disabled class="bg-gray-50 text-gray-400 button-thanh-toan">
                            <i class="bi bi-bag-x"></i> Hết hàng
                        </button>
                    }
                    else if (!Model.ChoPhepBanOnline)
                    {
                        <button disabled class="bg-orange-50 text-orange-600 button-thanh-toan">
                            <i class="bi bi-shop-window"></i> Mua tại cửa hàng
                        </button>
                    }
                    else
                    {
                        <button type="button"
                                onclick="addToCart(@Model.IdThuoc)"
                                class="bg-primary text-white button-thanh-toan">
                            <i class="bi bi-cart3 text-lg"></i> Thêm vào giỏ
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-3 mb-4">
            <div class="nav flex-column nav-pills drug-nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                <button class="nav-link active" id="v-pills-info-tab" data-bs-toggle="pill" data-bs-target="#v-pills-info" type="button" role="tab" aria-controls="v-pills-info" aria-selected="true">
                    Thông tin chi tiết
                </button>

                <button class="nav-link" id="v-pills-thanhphan-tab" data-bs-toggle="pill" data-bs-target="#v-pills-thanhphan" type="button" role="tab" aria-controls="v-pills-thanhphan" aria-selected="false">
                    Thành phần
                </button>

            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content bg-white p-4 rounded shadow-sm border border-light" id="v-pills-tabContent">

                <div class="tab-pane fade show active" id="v-pills-info" role="tabpanel" aria-labelledby="v-pills-info-tab">

                    <div class="mb-4">
                        <h4 class="fw-bold text-dark mb-3">1. Công dụng</h4>
                        <div class="text-secondary ps-3" style="line-height: 1.6;">
                            @if (!string.IsNullOrEmpty(Model.CongDung))
                            {
                                @Html.Raw(Model.CongDung.Replace("\n", "<br>"))
                            }
                            else
                            { <span>Đang cập nhật...</span>}
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25"> <div class="mb-4">
                        <h4 class="fw-bold text-dark mb-3">2. Liều dùng & Cách dùng</h4>
                        <div class="text-secondary ps-3" style="line-height: 1.6;">
                            @if (!string.IsNullOrEmpty(Model.LieuDung))
                            {
                                @Html.Raw(Model.LieuDung.Replace("\n", "<br>"))
                            }
                            else
                            { <span>Đang cập nhật...</span>}
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25">

                    <div class="mb-2">
                        <h4 class="fw-bold text-dark mb-3">3. Chống chỉ định</h4>
                        <div class="text-danger ps-3 fw-medium">
                            @if (!string.IsNullOrEmpty(Model.ChongChiDinh))
                            {
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @Html.Raw(Model.ChongChiDinh.Replace("\n", "<br>"))
                            }
                            else
                            { <span class="text-secondary fw-normal">Không có thông tin đặc biệt.</span>}
                        </div>
                    </div>

                </div>

                <div class="tab-pane fade" id="v-pills-thanhphan" role="tabpanel" aria-labelledby="v-pills-thanhphan-tab">
                    <h4 class="fw-bold text-dark mb-3">Thành phần thuốc</h4>
                    <div class="text-secondary">
                        <p>Thông tin thành phần đang được cập nhật...</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script đơn giản xử lý tăng giảm số lượng
        function updateQty(change) {
            var input = document.getElementById('inputQty');
            var currentVal = parseInt(input.value);
            var newVal = currentVal + change;

            if (newVal >= 1) {
                input.value = newVal;
            }
        }
    </script>
}