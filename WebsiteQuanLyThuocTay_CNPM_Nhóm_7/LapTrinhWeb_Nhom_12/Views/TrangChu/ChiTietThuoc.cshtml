<style>
    /* CSS Tùy chỉnh để giống ảnh mẫu */
    .product-detail-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    /* Phần giá tiền */
    .price-tag {
        color: #0d6efd; /* Màu xanh dương đậm giống ảnh */
        font-size: 32px;
        font-weight: 700;
        line-height: 1.2;
    }

    .price-unit {
        font-size: 18px;
        color: #666;
        font-weight: normal;
    }

    /* Bảng thông số kỹ thuật (Danh mục, dạng bào chế...) */
    .specs-table {
        width: 100%;
        margin-top: 20px;
    }

        .specs-table td {
            padding: 8px 0;
            vertical-align: top;
        }

    .specs-label {
        width: 140px;
        color: #666;
        font-weight: 500;
    }

    .specs-value {
        color: #111;
        font-weight: 500;
    }

    .specs-link {
        color: #0d6efd;
        text-decoration: none;
    }

    /* Nút chọn số lượng hình viên thuốc */
    .quantity-pill-group {
        display: inline-flex;
        border: 1px solid #ced4da;
        border-radius: 50px; /* Bo tròn như viên thuốc */
        overflow: hidden;
        width: 120px;
        height: 40px;
        align-items: center;
        margin-left: 10px;
    }

    .btn-qty {
        background: #fff;
        border: none;
        width: 35px;
        height: 100%;
        font-size: 20px;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

        .btn-qty:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }

    .input-qty {
        width: 50px;
        text-align: center;
        border: none;
        outline: none;
        font-weight: 600;
        font-size: 16px;
        /* Xóa mũi tên input number */
        -moz-appearance: textfield;
    }

        .input-qty::-webkit-outer-spin-button,
        .input-qty::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Nút Mua Hàng */
    .btn-buy-now {
        background-color: #1d48ba; /* Xanh đậm hơn chút */
        color: white;
        font-weight: 700;
        border-radius: 8px;
        padding: 12px 40px;
        border: none;
        transition: all 0.2s;
        width: 100%;
        max-width: 250px;
    }

        .btn-buy-now:hover {
            background-color: #15358a;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    /* Footer Icon dịch vụ */
    .service-icons {
        margin-top: 20px;
        border-top: 1px solid #eee;
        padding-top: 15px;
        display: flex;
        gap: 20px;
        font-size: 13px;
        color: #555;
    }

    .service-item i {
        color: #1d48ba;
        margin-right: 5px;
        font-size: 16px;
    }
    /* Style cho khung chứa Tab bên trái */
    .drug-nav-pills .nav-link {
        color: #6c757d; /* Màu chữ xám khi chưa chọn */
        text-align: left; /* Canh lề trái */
        padding: 15px 20px; /* Khoảng cách rộng rãi */
        border-bottom: 1px solid #f0f0f0; /* Đường kẻ mờ ngăn cách */
        border-radius: 8px; /* Bo góc nhẹ */
        margin-bottom: 5px;
        font-weight: 500;
        transition: all 0.2s;
    }

        /* Hiệu ứng khi Hover */
        .drug-nav-pills .nav-link:hover {
            background-color: #f8f9fa;
            color: #1A3A6B;
        }

        /* Style cho Tab ĐANG ĐƯỢC CHỌN (Active) - Giống ảnh mẫu */
